{
	"compilerOptions": {
		"outDir": "./dist",
		"experimentalDecorators": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "ESNext",
		"module": "Preserve",
		// "module": "ESNext",
		"moduleResolution": "Bundler",
		// "moduleResolution": "Node",
		"sourceMap": true,
		"rootDir": ".",
		"paths": {
			"~/*": ["./src/*"]
		},
		"types": ["bun-types"]
	},
	"reflection": true,
	"exclude": ["**/node_modules/**", "**/dist/**"]
}
